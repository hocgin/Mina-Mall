/**
 * 用户信息
 */
.user-info {
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: #3A84EF;
  color: #fff;
}
.user-info .avatar {
  width: 128rpx;
  height: 128rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  border: solid 4rpx #fff;
}
.user-info .detailed {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.user-info .detailed .username {
  font-size: 13pt;
  display: block;
  font-weight: 500;
}
.user-info .detailed .description {
  font-size: 8pt;
  font-weight: inherit;
}
/**
 * 用户收藏/关注/消息
 */
.user-tab {
  z-index: 1;
  width: 100%;
  display: flex;
  background-color: #3A84EF;
  color: #fff;
  padding: 5rpx 0 5rpx;
  position: relative;
  box-shadow: 0 5rpx 5rpx 0 rgba(87, 129, 193, 0.16), 0 5rpx 10rpx 0 rgba(76, 129, 198, 0.13);
}
.user-tab .tab-item {
  flex: 1;
  font-size: 11pt;
  display: flex;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.user-tab .tab-item .title {
  font-size: 8pt;
  font-weight: inherit;
}
.my-order {
  border-bottom: solid 1px rgba(213, 213, 213, 0.31);
  box-sizing: border-box;
}
.my-order .more {
  z-index: 100;
  color: #7F8389;
  font-size: 10pt;
  font-weight: inherit;
}
