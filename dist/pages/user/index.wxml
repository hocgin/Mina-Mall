<view class="user">
  <!-- 自定义导航 -->
  <ui-nav-bar slot="nav-bar" custom-style="{{ {backgroundColor:'#3A84EF',color:'#fff'} }}" _pid="{{_pid}}">
    <view class="ui-row" style="height:46px;">
      <view class="ui-col ui-col-align-center align-center valign-middle" style="">
        <view class="ui-col-content align-center valign-middle">
          <view class="bar-title">个人中心</view>
        </view>
      </view>
    </view>
  </ui-nav-bar>

  <!-- 设置内容距离nav-bar高度占位 -->
  <view style="height:{{NAV_HEIGHT}}"></view>

  <!-- 个人信息 -->
  <view class="user-info">
    <image class="avatar" mode="scaleToFill" src="https://hocg.in/Resume/img/avatar.png" />
    <view class="detailed">
      <text class="username">hocgin</text>
      <text class="description">这家伙很懒，什么也没留下</text>
    </view>
  </view>

  <!-- 显示面板 -->
  <view class="user-tab">
    <navigator class="tab-item" url="/pages/collection/index?current=0">
      <text>99+</text>
      <text class="title">收藏</text>
    </navigator>
    <navigator class="tab-item" url="/pages/collection/index?current=1">
      <text>12</text>
      <text class="title">关注</text>
    </navigator>
    <navigator class="tab-item" url="/pages/messages/index">
      <text>0</text>
      <text class="title">消息</text>
    </navigator>
  </view>

  <!-- 订单工具栏 -->
  <navigator url="/pages/order-manager/index?tab=0" class="mix-1px-bottom-1 tool-title my-order bg-white">
    <view class="bold-5">我的订单</view>
    <view class="more">
      更多
    </view>
  </navigator>

  <view class="mix-1px-bottom-1 bg-white column">
    <view class="row mix-1px-bottom-1">
      <navigator url="/pages/order-manager/index?tab=1">
        <image-item src="http://qiniu.remmoe.com/pending_pay.png" text="待付款" _pid="{{_pid}}">
        </image-item>
      </navigator>
      <navigator url="/pages/order-manager/index?tab=2">
        <image-item src="http://qiniu.remmoe.com/pending_send.png" text="待发货" _pid="{{_pid}}">
        </image-item>
      </navigator>
      <navigator url="/pages/order-manager/index?tab=3">
        <image-item src="http://qiniu.remmoe.com/pending_goods.png" text="待收货" _pid="{{_pid}}">
        </image-item>
      </navigator>
      <navigator url="/pages/order-manager/index">
        <image-item src="http://qiniu.remmoe.com/pending_comment.png" text="待评价" _pid="{{_pid}}">
        </image-item>
      </navigator>
      <navigator url="/pages/order-manager/index">
        <image-item src="http://qiniu.remmoe.com/sale_order.png" text="售后" _pid="{{_pid}}"></image-item>
      </navigator>
    </view>
  </view>

  <!-- 其他入口栏 -->
  <view class="mix-1px-bottom-1 mix-1px-top-1 bg-white tool-title margin-top-20 bold-5">
    工具栏
  </view>
  <view class="bg-white column">
    <view class="row mix-1px-bottom-1">
      <navigator url="/pages/address-list/index">
        <icon-item text="收货地址" _pid="{{_pid}}"></icon-item>
      </navigator>
      <navigator url="/pages/logistics-details/index">
        <icon-item text="物流跟踪" _pid="{{_pid}}"></icon-item>
      </navigator>
      <navigator url="/pages/product-details/index">
        <icon-item text="商品详情" _pid="{{_pid}}"></icon-item>
      </navigator>
      <navigator url="/pages/shop/index">
        <icon-item text="店铺" _pid="{{_pid}}"></icon-item>
      </navigator>
      <navigator url="/pages/classify/index">
        <icon-item text="平台分类" _pid="{{_pid}}"></icon-item>
      </navigator>
    </view>
    <view class="row mix-1px-bottom-1">
      <navigator url="/pages/search/index">
        <icon-item text="搜索" _pid="{{_pid}}"></icon-item>
      </navigator>
      <navigator url="/pages/logistics-details/index">
        <icon-item text="暂无" _pid="{{_pid}}"></icon-item>
      </navigator>
      <navigator url="/pages/product-details/index">
        <icon-item text="暂无" _pid="{{_pid}}"></icon-item>
      </navigator>
      <navigator url="/pages/shop/index">
        <icon-item text="暂无" _pid="{{_pid}}"></icon-item>
      </navigator>
      <navigator url="/pages/classify/index">
        <icon-item text="暂无" _pid="{{_pid}}"></icon-item>
      </navigator>
    </view>
  </view>

</view>