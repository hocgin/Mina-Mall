<view>

  <ui-nav-bar slot="nav-bar" custom-style="{{ {backgroundColor:'#fff',borderBottom: 'solid 1px #F0F0F0'} }}" _pid="{{_pid}}">
    <view class="ui-row" style="height:46px;">
      <view bindtap="navigateBack" class="ui-col ui-col-align-center align-center valign-middle" style="flex:0 0 60px;">
        <view class="ui-col-content align-center valign-middle">
          <span type="arrow-left" size="16" color="#333" class="ui-icon icon-arrow-left" style="color: #333;font-size: 16px;"></span>
        </view>
      </view>
      <view class="ui-col ui-col-align-center align-center valign-middle" style="">
        <view class="ui-col-content align-center valign-middle">
          <view>订单详情</view>
        </view>
      </view>
      <view class="ui-col ui-col-align-center align-center valign-middle" style="flex:0 0 60px;">
        <view class="ui-col-content align-center valign-middle"></view>
      </view>
    </view>
  </ui-nav-bar>
  <view style="height:{{NAV_HEIGHT}}"></view>

  <view class="order-details">
    <!-- 物流信息 -->
    <view class="bg">
      <text class="state">完成</text>
      <view class="logistics">
        <view>图</view>
        <view class="text">感谢您在代购网购物，欢迎再次光临！</view>
        <view>></view>
      </view>
    </view>

    <!-- 订单信息 -->
    <view class="shopping-items">
      <view class="mix-1px-box product">
        <!-- 店铺名 -->
        <view class="head">
          <label class="store-name line-1-ellipsis">
            {{ order.store.name }}
          </label>
        </view>

        <view class="item-group">
          <!-- 商品单项 -->
          <view class="item" wx:for="{{ order.productes }}" wx:for-item="product">
            <image class="image" src="http://placehold.it/80x100" model="aspectFill" />
            <view class="details">
              <view class="line-1-ellipsis title">{{ product.name }}</view>
              <view class="tags"> 数量:{{product.number}} 型号:{{ product.tags }} </view>
              <view class="price-pannel">
                <text class="price">¥{{ product.price }}</text>
              </view>
            </view>
          </view>
        </view>

        <view class="link">
          联系客服
        </view>
      </view>
    </view>

    <!-- 支付信息 -->
    <view class="column payment-info mix-1px-box">
      <view class="row">
        <view class="key">订单编号:</view>
        <view class="value">1234567890</view>
      </view>
      <view class="row mix-1px-bottom-1">
        <view class="key">下单时间:</view>
        <view class="value">2018-05-17 12:65:90</view>
      </view>
      <view class="row">
        <view class="key">支付方式:</view>
        <view class="value">微信支付</view>
      </view>
      <view class="row">
        <view class="key">支付时间:</view>
        <view class="value">2018-05-17 12:65:90</view>
      </view>
    </view>

    <!-- 收货地址 -->
    <address-one _pid="{{_pid}}"></address-one>

    <!-- 金额信息 -->
    <view class="column price-info mix-1px-box">
      <view class="row">
        <view class="key">商品总额:</view>
        <view class="value">¥75.00</view>
      </view>
      <view class="row">
        <view class="key">运费:</view>
        <view class="value">+¥5.00</view>
      </view>
      <view class="row mix-1px-bottom-1">
        <view class="key">税费:</view>
        <view class="value">+¥5.00</view>
      </view>
      <view class="row all-price">
        实付款:
        <text class="price">¥85.00</text>
      </view>
    </view>

    <ui-divider _pid="{{_pid}}">我是有底线的</ui-divider>

  </view>

</view>