<view class="news">
  <ui-nav-bar slot="nav-bar" class="nav_bar" custom-style="{{ navBarStyle }}" _pid="{{_pid}}">
    <view class="ui-row" style="height:46px;">
      <view class="news-title">
        <text class="t1">动</text>
        <text class="t2">态</text>
      </view>
      <view class="ui-col valign-middle" style="">
        <view class="ui-col-content valign-middle">
          <ui-tabs ink-bar="true" ink-bar-style="{{ inkBarStyle }}" tab-style="{{tabStyle}}" width="{{ width-140 }}" index="{{ current }}" bindchange="handleChange" _pid="{{_pid}}">
            <ui-tab _pid="{{_pid}}">
              <view class="">推荐</view>
            </ui-tab>
            <ui-tab _pid="{{_pid}}">
              <view class="">关注</view>
            </ui-tab>
            <ui-tab _pid="{{_pid}}">
              <view class="">直播</view>
            </ui-tab>
            <ui-tab _pid="{{_pid}}">
              <view class="">小贴士</view>
            </ui-tab>
          </ui-tabs>
        </view>
      </view>
      <view class="ui-col ui-col-align-center align-center valign-middle" style="flex:0 0 100px;">
        <view class="ui-col-content align-center valign-middle">
        </view>
      </view>
    </view>
  </ui-nav-bar>
  <view style="height:{{NAV_HEIGHT}}"></view>
  <view class="top-banner"></view>
  <view class="body">
    <swiper style="height:{{ contentHeight }}px" class="content" current="{{ current }}" bindchange="handleContentChange">
      <swiper-item class="content" wx:for="{{[1,2,3,4]}}">
        <scroll-view scroll-y style="height:{{DEFAULT_CONTENT_HEIGHT}}px" class="content_list">
          <news-card wx:for="{{[1,2]}}" _pid="{{_pid}}"></news-card>
          <view class="last" decode="true">
            <ui-divider _pid="{{_pid}}">彩蛋</ui-divider>
          </view>
        </scroll-view>
      </swiper-item>
      <swiper>
      </swiper>
    </swiper>
  </view>
  <view>
  </view>
</view>