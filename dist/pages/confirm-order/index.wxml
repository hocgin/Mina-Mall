<view>

  <ui-nav-bar slot="nav-bar" custom-style="{{ {backgroundColor:'#fff',borderBottom: 'solid 1px #F0F0F0'} }}" _pid="{{_pid}}">
    <view class="ui-row" style="height:46px;">
      <view bindtap="navigateBack" class="ui-col ui-col-align-center align-center valign-middle" style="flex:0 0 60px;">
        <view class="ui-col-content align-center valign-middle">
          <span type="arrow-left" size="16" color="#333" class="ui-icon icon-arrow-left" style="color: #333;font-size: 16px;"></span>
        </view>
      </view>
      <view class="ui-col ui-col-align-center align-center valign-middle" style="">
        <view class="ui-col-content align-center valign-middle">
          <view class="bar-title">确认订单</view>
        </view>
      </view>
      <view class="ui-col ui-col-align-center align-center valign-middle" style="flex:0 0 60px;">
        <view class="ui-col-content align-center valign-middle"></view>
      </view>
    </view>
  </ui-nav-bar>
  <view style="height:{{NAV_HEIGHT}}"></view>

  <view class="confirm-order">
    <!-- 地址信息 -->
    <view class="mix-1px-box address">
      <view class="col-1">
        <view class="head">
          <text class="name">洪承金</text>
          <text class="phone">13600747016</text>
        </view>
        <view class="body">
          <text class="bagde">默认</text>福建省厦门市湖里区 木山接到县后舍449号木山接到县后舍449号木山接到县后舍449号
        </view>
      </view>
      <view class="col-2">
        <span type="arrow-right" size="16" color="#333" class="ui-icon icon-arrow-right" style="color: #333;font-size: 16px;"></span>
      </view>
    </view>

    <!-- 商品/店铺 -->
    <view class="shopping-items">
      <view class="mix-1px-box product" wx:for="{{ shoppingCarts }}" wx:for-item="item">
        <!-- 店铺名 -->
        <view class="head">
          <navigator class="row store" url="/pages/shop/index">
            <span type="store" size="20" color="#6F7279" class="ui-icon icon-store" style="color: #6F7279;font-size: 20px;"></span>
            <text class="store-name">{{ item.store.name }}</text>
            <span type="arrow-right" size="11" color="#333" class="ui-icon icon-arrow-right" style="color: #333;font-size: 11px;"></span>
          </navigator>
        </view>

        <view class="item-group">
          <!-- 商品单项 -->
          <view class="item" wx:for="{{ item.productes }}" wx:for-item="product">
            <image class="image" src="http://placehold.it/80x100" model="aspectFill" />
            <view class="details">
              <view class="line-2-ellipsis title">{{ product.name }}</view>
              <view class="tags"> {{ product.tags }} </view>
              <view class="price-pannel">
                <text class="price">¥{{ product.price }}</text>
                <view class="number">x{{product.number}}</view>
              </view>
            </view>
          </view>
        </view>

        <!-- 留言框 -->
        <view class="text">
          <input type="text" confirm-type="确定" cursor-spacing="10" placeholder="选填:给商家留言(45字以内)"></input>
        </view>

      </view>
    </view>

    <!-- 价格 -->
    <view class="mix-1px-box price-list">
      <view class="row">
        <view class="title">商品金额</view>
        <view class="price">¥712.00</view>
      </view>
      <view class="row">
        <view class="title">运费</view>
        <view class="price">+ ¥0.00</view>
      </view>
    </view>
  </view>


  <!-- 工具栏 -->
  <view class="fixed_bottom">
    <view class="total">
      <text class="price">¥575.37</text>
    </view>
    <navigator class="btn" url="/pages/order-details/index">提交订单</navigator>
  </view>
</view>