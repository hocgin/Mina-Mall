<view class="new-address">

  <ui-nav-bar slot="nav-bar" custom-style="{{ {backgroundColor:'#fff'} }}" _pid="{{_pid}}">
    <view class="ui-row" style="height:46px;">
      <view bindtap="navigateBack" class="ui-col ui-col-align-center align-center valign-middle" style="flex:0 0 60px;">
        <view class="ui-col-content align-center valign-middle">
          <span type="arrow-left" size="16" color="#333" class="ui-icon icon-arrow-left" style="color: #333;font-size: 16px;"></span>
        </view>
      </view>
      <view class="ui-col ui-col-align-center align-center valign-middle" style="">
        <view class="ui-col-content align-center valign-middle">
          <view class="bar-title">新建地址</view>
        </view>
      </view>
      <view class="ui-col ui-col-align-center align-center valign-middle" style="flex:0 0 60px;">
        <view class="ui-col-content align-center valign-middle"></view>
      </view>
    </view>
  </ui-nav-bar>

  <!-- 设置内容距离nav-bar高度占位 -->
  <view style="height:{{NAV_HEIGHT}}"></view>

  <view class="row-list">
    <view class="row">
      <view class="left">
        收货人:
      </view>
      <view class="right">
        <input type="text"></input>
      </view>
    </view>
    <view class="row">
      <view class="left">
        手机号码:
      </view>
      <view class="right">
        <input type="text"></input>
      </view>
    </view>
    <view class="row">
      <view class="left">
        所在地区:
      </view>
      <view class="right">
        <input type="text"></input>
      </view>
    </view>
    <view class="row">
      <view class="left">
        详细地址:
      </view>
      <view class="right">
        <textarea placeholder-style="font-size: 12pt;" placeholder="街道、楼牌号等"></textarea>
      </view>
    </view>
    <view class="row">
      <view class="left">
        默认地址
      </view>
      <view class="right">
        <checkbox checked color="#3A84EF">
        </checkbox>
      </view>
    </view>
  </view>


  <!-- 底部按钮 -->
  <view class="btn-save">
    <button class="button-style-1">保存并使用</button>
  </view>

</view>