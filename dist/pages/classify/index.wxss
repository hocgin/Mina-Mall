.container {
  display: flex;
}
.imgbox {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto;
  border: 1px solid #ccc;
  border-style: rgba(231, 231, 231, 0.6);
}
.imgbox .ui-image {
  width: 100%;
}
.small-title {
  font-size: 24rpx;
  text-align: center;
  margin-top: 20rpx;
}
.advertising {
  margin: 15rpx 15rpx 0;
}
.advertising .images {
  height: 100px;
}
.advertising .images .image {
  height: 100px;
  width: 100%;
}
.goods-box {
  display: flex;
  flex-wrap: wrap;
