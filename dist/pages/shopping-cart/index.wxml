<view class="body">

  <!-- 自定义导航 -->
  <ui-nav-bar slot="nav-bar" custom-style="{{ {backgroundColor:'#fff',borderBottom: 'solid 1px #F0F0F0'} }}" _pid="{{_pid}}">
    <view class="ui-row" style="height:46px;">
      <view class="ui-col valign-middle" style="">
        <view class="ui-col-content valign-middle">
          <text class="edit">编辑</text>
        </view>
      </view>
      <view class="ui-col ui-col-align-center align-center valign-middle" style="">
        <view class="ui-col-content align-center valign-middle">
          <view class="bar-title">购物车</view>
        </view>
      </view>
      <view class="ui-col" style="">
        <view class="ui-col-content"></view>
      </view>
    </view>
  </ui-nav-bar>

  <!-- 设置内容距离nav-bar高度占位 -->
  <view style="height:{{NAV_HEIGHT}}"></view>

  <!-- 商品/店铺 -->
  <view class="shopping-items">
    <view class="mix-1px-box product" wx:for="{{ shoppingCarts }}" wx:for-item="item">
      <!-- 店铺名 -->
      <view class="mix-1px-bottom-1 head">
        <label>
          <radio class="mini" value="{{ item.store.id }}" color="#3A84EF">
          </radio>
        </label>
        <navigator class="row store" url="/pages/shop/index">
          <span type="store" size="20" color="#6F7279" class="ui-icon icon-store" style="color: #6F7279;font-size: 20px;"></span>
          <text class="store-name">{{ item.store.name }}</text>
          <span type="arrow-right" size="11" color="#333" class="ui-icon icon-arrow-right" style="color: #333;font-size: 11px;"></span>
        </navigator>
      </view>

      <view class="item-group">
        <!-- 商品单项 -->
        <view class="item" wx:for="{{ item.productes }}" wx:for-item="product">
          <view class="radio">
            <radio value="{{ product.id }}" color="#3A84EF">
            </radio>
          </view>
          <image class="image" src="http://placehold.it/80x100" model="aspectFill" />
          <view class="details">
            <view class="line-2-ellipsis title">{{ product.name }}</view>
            <view class="tags"> {{ product.tags }} </view>
            <view class="price-pannel">
              <text class="price">¥{{ product.price }}</text>
              <ui-stepper class="stepper" min="1" value="{{ product.number }}" _pid="{{_pid}}">
              </ui-stepper>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 工具栏 -->
  <ui-fixed-view bottom="0" left="0" right="0" _pid="{{_pid}}">
    <view class="fixed_bottom ui-row" style="height:50px;">
      <view class="ui-col ui-col-3 ui-col-align-left align-left valign-middle" style="flex: 0 0 25%;padding-left: 10px;">
        <view class="ui-col-content align-left valign-middle">
          <label>
            <radio value="全选" color="#3A84EF">全选
            </radio>
          </label>
        </view>
      </view>
      <view class="ui-col ui-col-align-right align-right valign-middle" style="padding-right: 10px;">
        <view class="ui-col-content align-right valign-middle">
          <view class="total">总计：
            <text class="price">¥575.37</text>
          </view>
          <!-- <view style="color:#FE6A3C;">（满1200元可免邮费）</view> -->
        </view>
      </view>
      <view class="ui-col valign-middle" style="flex:0 0 80px;">
        <view class="ui-col-content valign-middle">
          <navigator class="form_list" url="/pages/confirm-order/index">去结算</navigator>
        </view>
      </view>
    </view>
    <view class="iphonex-bottom"></view>
  </ui-fixed-view>


</view>