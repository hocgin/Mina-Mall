<view class="collection">

  <ui-nav-bar slot="nav-bar" custom-style="{{ {backgroundColor:'#fff',borderBottom: 'solid 1px #F0F0F0'} }}" _pid="{{_pid}}">
    <view class="ui-row" style="height:46px;">
      <view bindtap="navigateBack" class="ui-col ui-col-align-center align-center valign-middle" style="flex:0 0 60px;">
        <view class="ui-col-content align-center valign-middle">
          <span type="arrow-left" size="16" color="#333" class="ui-icon icon-arrow-left" style="color: #333;font-size: 16px;"></span>
        </view>
      </view>
      <view class="ui-col ui-col-align-center align-center valign-middle" style="">
        <view class="ui-col-content align-center valign-middle">
          <view style="width:120px;margin:0 auto;">
            <ui-tabs width="120" tab-style="{{tabStyle}}" auto-width="{{false}}" index="{{ current }}" bindchange="changTab" _pid="{{_pid}}">
              <ui-tab _pid="{{_pid}}">商品</ui-tab>
              <ui-tab _pid="{{_pid}}">店铺</ui-tab>
            </ui-tabs>
          </view>
        </view>
      </view>
      <view class="ui-col ui-col-align-center align-center valign-middle" style="flex:0 0 60px;">
        <view class="ui-col-content align-center valign-middle"></view>
      </view>
    </view>
  </ui-nav-bar>
  <view style="height:{{NAV_HEIGHT}}"></view>

  <!-- 内容 -->
  <view class="content">
    <!-- 商品 -->
    <scroll-view wx:if="{{current == 0}}" scroll-y="true" style="height:{{ height }}px;">
      <ui-swipe-out operate-width="80" can-swipe="{{true}}" style="height: {{ goods_item_height }}; display: block;" bindchange="deleteGoodsChange" wx:for="{{ [1,2,3,4,5,5,5] }}" _pid="{{_pid}}">
        <goods-item class="goods-item" slot="content" _pid="{{_pid}}"></goods-item>
        <view slot="operate">
          <view class="delete" style="line-height: {{goods_item_height}}">删除</view>
        </view>
      </ui-swipe-out>
    </scroll-view>
    <!-- 店铺 -->
    <scroll-view wx:if="{{current == 1}}" scroll-y="true" style="height:{{ height }}px;">
      <ui-swipe-out operate-width="80" can-swipe="{{true}}" style="height: {{ shop_item_height }};display: block;" bindchange="deleteShopChange" wx:for="{{ [1,2,3,4,5,2,3,4,5] }}" _pid="{{_pid}}">
        <shop-item class="shop-item" slot="content" _pid="{{_pid}}"></shop-item>
        <view slot="operate">
          <view class="delete" style="line-height: {{shop_item_height}}">取消</view>
        </view>
      </ui-swipe-out>
    </scroll-view>
  </view>

</view>