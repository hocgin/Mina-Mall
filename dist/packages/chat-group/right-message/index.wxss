.message {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}
.message .user image {
  border-radius: 50%;
  width: 40px;
  height: 40px;
}
.message .text {
  margin-right: 20rpx;
  border-radius: 5rpx;
  background-color: #3A84EF;
  color: #fff;
  padding: 8rpx 15rpx;
  position: relative;
  word-break: break-all;
  box-shadow: 0 5rpx 5rpx 0 rgba(248, 248, 248, 0.16), 0 5rpx 10rpx 0 rgba(255, 255, 255, 0.13);
}
.message .text::before {
  content: '';
  position: absolute;
  right: -20rpx;
  top: 10rpx;
  width: 0;
  height: 0;
  border-style: solid dashed dashed;
  border-color: transparent transparent #3A84EF;
  transform: rotateZ(90deg);
  overflow: hidden;
  border-width: 10rpx;
}
