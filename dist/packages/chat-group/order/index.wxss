.order {
  border-top: 1px solid rgba(231, 231, 231, 0.6);
  border-bottom: 1px solid rgba(231, 231, 231, 0.6);
  box-shadow: 0 5rpx 5rpx 0 rgba(248, 248, 248, 0.16), 0 5rpx 10rpx 0 rgba(255, 255, 255, 0.13);
  background-color: #fff;
  display: flex;
  margin-top: 15rpx;
  flex-direction: column;
}
.order .detailed {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.order .detailed .cover {
  flex-shrink: 0;
  height: 150rpx;
  width: 150rpx;
  margin-right: 20rpx;
}
.order .detailed .description {
  display: flex;
  flex-direction: column;
  font-weight: 400;
  font-size: 10pt;
}
.order .detailed .description .name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.order .detailed .price {
  color: #E92E3A;
  font-size: 12pt;
  font-weight: 700;
}
.order .toolbar {
  border-top: 1px solid rgba(231, 231, 231, 0.6);
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: #3A84EF;
}
