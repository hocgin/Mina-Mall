.message {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}
.message .user image {
  background-color: #FAFAFA;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
}
.message .text {
  margin-left: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  padding: 20rpx 15rpx;
  position: relative;
  word-break: break-all;
  font-size: 11pt;
  box-shadow: 0 5rpx 5rpx 0 rgba(248, 248, 248, 0.16), 0 5rpx 10rpx 0 rgba(255, 255, 255, 0.13);
}
.message .text::after {
  content: '';
  position: absolute;
  right: none;
  top: 10rpx;
  width: 0;
  height: 0;
  border-style: solid dashed dashed;
  border-color: #fff transparent transparent;
  transform: rotateZ(90deg);
  overflow: hidden;
  border-width: 12rpx;
}
.message .text:not(.reverse)::after {
  left: -20rpx;
}
.message .text.reverse {
  margin-right: 20rpx;
  background-color: #3A84EF;
  color: #fff;
}
.message .text.reverse::after {
  left: none;
  right: -20rpx;
  border-color: transparent transparent #3A84EF;
}
