.ui-timeline-item {
  list-style: none;
  margin: 0;
  padding: 0 0 0 10px;
  position: relative;
}
.ui-timeline-item .ui-timeline-circle {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background: #8a8a8a;
  position: absolute;
  left: 26px;
}
.ui-timeline-item .ui-timeline-circle-shadow {
  width: 20px;
  height: 20px;
  opacity: 0.5;
  border-radius: 50%;
  position: absolute;
  left: 21px;
  top: -5px;
}
.ui-timeline-item .ui-timeline-circle.circle {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  border-color: #8a8a8a;
  border-width: 1px;
  border-style: solid;
  position: absolute;
  left: 26px;
  background: #FFF;
}
.ui-timeline-item .ui-timeline-line {
  position: absolute;
  top: 0;
  left: 30px;
  width: 2px;
  height: 100%;
  background: #8a8a8a;
}
.ui-timeline-item-row {
  float: left;
  position: relative;
  list-style: none;
  margin: 0;
  text-align: center;
  height: 60px;
}
.ui-timeline-item-row .ui-timeline-circle {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background: #8a8a8a;
  position: absolute;
  left: 50%;
  top: 26px;
}
.ui-timeline-item-row .ui-timeline-circle-shadow {
  width: 20px;
  height: 20px;
  opacity: .5;
  border-radius: 50%;
  position: absolute;
  left: calc(43%);
  top: 21px;
}
.ui-timeline-item-row .ui-timeline-line {
  position: absolute;
  top: 30px;
  left: 50%;
  height: 2px;
  width: 100%;
  background: #8a8a8a;
}
