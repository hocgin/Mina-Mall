.image-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  text-align: center;
  align-items: center;
}
.image-item .text {
  color: #6B6B6B;
  margin-top: 10rpx;
}
.default .image {
  height: 30px;
  width: 30px;
}
.default .text {
  font-size: 25rpx;
}
.lg .text {
  color: #000;
  font-size: 25rpx;
}
