.address {
  border: solid 1rpx #F0F0F0;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.address .head {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 10rpx;
}
.address .head .name {
  margin-right: 10rpx;
  font-weight: 700;
  font-size: 12pt;
}
.address .head .phone {
  margin-left: 10rpx;
  margin-right: 10rpx;
  font-weight: 700;
  font-size: 12pt;
}
.address .head .bagde {
  border: solid 1px #3A84EF;
  border-radius: 8rpx;
  font-size: 8pt;
  color: #3A84EF;
  padding-left: 5rpx;
  padding-right: 5rpx;
  box-sizing: border-box;
}
.address .body {
  color: #777;
  font-size: 10pt;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.address .foot {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  border-top: solid 1px #F0F0F0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: #777;
}
.address .foot .right {
  display: flex;
  flex-direction: row;
}
.address .foot .right .edit,
.address .foot .right .delete {
  margin-left: 5rpx;
  margin-right: 5rpx;
}
