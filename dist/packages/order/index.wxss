.order {
  border-top: 1px solid rgba(231, 231, 231, 0.6);
  border-bottom: 1px solid rgba(231, 231, 231, 0.6);
  background-color: #fff;
  display: flex;
  margin-top: 15rpx;
  flex-direction: column;
}
.order .source {
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.order .source .store {
  display: flex;
  flex-direction: column;
}
.order .source .store .name {
  font-size: 10pt;
  font-weight: 500;
  color: #000;
}
.order .source .store .no {
  font-size: 9pt;
  color: #99999A;
}
.order .source .state {
  font-size: 10pt;
  font-weight: 400;
  color: #99999A;
}
.order .detailed {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 1px solid rgba(231, 231, 231, 0.6);
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
}
.order .detailed .cover {
  flex-shrink: 0;
  height: 150rpx;
  width: 150rpx;
  margin-right: 20rpx;
}
.order .detailed .description {
  display: flex;
  flex-direction: column;
  font-weight: 400;
  font-size: 10pt;
}
.order .detailed .description .name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.order .detailed .price-pannel {
  flex-shrink: 0;
  height: 100%;
  margin-left: 10rpx;
  margin-right: 20rpx;
  align-self: flex-start;
  text-align: right;
}
.order .detailed .price-pannel .offer-price {
  font-size: 9pt;
  color: #99999A;
}
.order .price-span {
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  text-align: right;
  padding-right: 20rpx;
  font-size: 9pt;
  color: #99999A;
  font-weight: 400;
  border-bottom: dashed 1rpx #e7e7e7;
}
.order .price-span .number {
  color: #000;
  margin-left: 10rpx;
  margin-right: 10rpx;
  font-weight: 500;
}
.order .price-span .price-title {
  margin-left: 20rpx;
  margin-right: 20rpx;
  color: #000;
  font-size: 12pt;
  font-weight: 700;
}
.order .price-span .price {
  color: #000;
  font-size: 12pt;
  font-weight: 700;
}
.order .price-span .small {
  color: #000;
  font-size: 9pt;
  font-weight: 700;
}
.order .toolbar {
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  justify-content: flex-end;
  padding-right: 20rpx;
}
.order .toolbar .btn {
  margin-right: 5rpx;
  margin-left: 5rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  border-radius: 5rpx;
  font-size: 9pt;
  font-weight: 400;
  color: rgba(75, 75, 75, 0.98);
  border: solid 1rpx #F6F6F6;
}
.order .toolbar .btn.blue {
  color: #3A84EF;
  border: solid 1rpx #3A84EF;
}
