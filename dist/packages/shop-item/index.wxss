.shop-item {
  display: flex;
  flex-direction: row;
  border-bottom: solid 1px rgba(213, 213, 213, 0.31);
  background-color: #fff;
  align-items: center;
}
.shop-item .image {
  border: solid 1px #D0D0D0;
  height: 120rpx;
  width: 200rpx;
  padding: 5rpx;
  margin: 10rpx;
}
.shop-item .info {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}
.shop-item .info .name {
  font-weight: 700;
  font-size: 11pt;
  margin-bottom: 10rpx;
}
.shop-item .info .description {
  font-size: 9pt;
  color: #8B8B8B;
}
.shop-item .arrow-right {
  width: 100rpx;
  height: 100%;
  color: #8B8B8B;
  text-align: center;
}
